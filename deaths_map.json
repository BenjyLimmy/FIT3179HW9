{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Global Deaths by Air Pollution in the year 2023",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/BenjyLimmy/FIT3179HW9/main/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "stroke": "white"},
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/BenjyLimmy/FIT3179HW9/main/Global%20Country%20Emissions.csv"
              },
              "key": "Entity",
              "fields": ["Air Pollution Deaths (deaths per 100,000)"]
            }
          }
        ],
        "encoding": {
          "color": {
            "field": "Air Pollution Deaths (deaths per 100,000)",
            "type": "quantitative",
            "scale": {"scheme": "reds"},
            "legend": {"titleFontSize": 9}
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Air Pollution Deaths (deaths per 100,000)", "type": "quantitative"}
          ]
        }
      },

      { 
        "data": {
            "url": "https://raw.githubusercontent.com/BenjyLimmy/FIT3179HW9/refs/heads/main/ne_110m_ocean.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue", "stroke": "null"}
      },

      {
        
        "data": {
          "url": "https://raw.githubusercontent.com/BenjyLimmy/FIT3179HW9/main/ne_110m_graticules_30.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
      }

      
      
    ]
}